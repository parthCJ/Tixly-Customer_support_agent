# Environment variables for Oracle Cloud deployment

# GROQ API Key (required)
GROQ_API_KEY=your_groq_api_key_here

# CORS Configuration
# Add your Oracle Cloud public IP or domain
ALLOWED_ORIGINS=http://YOUR_ORACLE_IP,http://YOUR_ORACLE_IP:3000,http://localhost:3000
FRONTEND_URL=http://YOUR_ORACLE_IP:3000

# Frontend API URL
# Replace with your Oracle Cloud public IP
NEXT_PUBLIC_API_URL=http://YOUR_ORACLE_IP:8000
